<div class="bg-image"></div>
<div class="container">
  <h1>宝芝堂中药管理系统</h1>
  <div class="row justify-content-center">
    <div class="form-body col-12 col-md-4 p-4 rounded-3">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: "用户名" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "请输入密码" },
                      label: "密码" %>
          <%= f.input :remember_me, as: :boolean, label: '记住我' if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "登陆", class:'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
