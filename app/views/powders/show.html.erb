<%= render 'shared/navbar' %>
<div class="show-background-img"></div>
<div class="container">
  <h1><%= @powder.name %></h1>
  <div class="card text-black blurred-box">
    <div class="card-body">
      <div class="card-information">
          <p><%= @powder.name %></p>
          <p>现有库存：<%= @powder.qty_onhand %></p>
          <p>库位:<%= @powder.location %></p>
          <% if @powder.price_retail.nil? || @powder.price_bulk.nil? %>
            <p>零售价：无价格</p>
            <p>进货价：无价格</p>
          <% else %>
          <p>零售价：<%= @powder.price_retail.round(2) %></p>
          <p>进货价：<%= @powder.price_bulk.round(2) %></p>
          <% end %>
          <p>备注：<%= @powder.comment %></p>
      </div>
      <div class="mt-3">
      <a href="<%= powders_path %>" class="btn hvr-float-shadow">返回</a>
      <a href="<%= edit_powder_path(@powder.id) %>" class="btn hvr-float-shadow">编辑</a>
      <%= link_to "删除", powder_path(@powder.id), method: :delete, data:{ confirm: '确认?' }, class: "btn hvr-float-shadow" %>
      </a>
      </div>
    </div>
  </div>
</div>
